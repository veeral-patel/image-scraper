<p id="notice"><%= notice %></p>

<h2>Images</h2>

<br>

<table class="table">
  <thead>
    <tr>
      <th>Image url</th>
      <th>Scrape</th>
      <th>Size</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.image_url %></td>
        <td><%= image.scrape %></td>
        <td><%= image.size %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>