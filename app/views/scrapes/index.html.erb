<p id="notice"><%= notice %></p>

<h1>Scrapes</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Created At</th>
      <th>Status</th>
      <th>Largest image</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @scrapes.each do |scrape| %>
      <tr>
        <td><%= scrape.url %></td>
        <td><%= scrape.created_at %></td>
        <td><%= scrape.status %></td>
        <td><%= scrape.largest_image %></td>
        <td><%= link_to 'Show', scrape %></td>
        <td><%= link_to 'Destroy', scrape, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Scrape', new_scrape_path %>
